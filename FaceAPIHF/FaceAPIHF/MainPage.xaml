<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FaceAPIHF"
             x:Class="FaceAPIHF.MainPage">

    <StackLayout x:Name="PageStackLayout" Orientation="Vertical">
        <Grid HorizontalOptions="Center" VerticalOptions="FillAndExpand" x:Name="PhotoAndControls">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image x:Name="FaceImage" Grid.Row="0" Source="http://1.bp.blogspot.com/-hNC-oT6f-fY/TeXxO26yjvI/AAAAAAAAAOY/qfkOqdKkBi8/s1600/platon-photographer-putin-man-of-the-year-portrait.jpg" />
            <Grid VerticalOptions="Start"  Grid.Row="1">
                <Button Grid.Column="0" Text="FilePicker" />
                <Button Grid.Column="1" Text="Photo" />
                <Button Grid.Column="2" Text="Analize" />
            </Grid>
        </Grid>
        <Label Text="DATA"/>
    </StackLayout>
</ContentPage>
